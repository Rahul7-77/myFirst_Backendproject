<%- include('partials/header') %>

<div class="jnrs-main-div">
<h1 class="academic-one">General Answers</h1>
<hr style="height:2px;background-color:black;width:40%;text-align:center;">
</div>

<div class="club-user">

      <%questionsList.forEach(general => {%>
        <!-- <h1><%= general.question %></h1> -->
        <button class="accordion"><%= general.question %></button>
        <!-- <h3><%= general.answer %></h3> -->
        <div class="panel">
          <p>Ans:)  <%= general.answer %></p>
        </div>
    <%})%>

    <hr>
    </div>
    <script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
      acc[i].addEventListener("click", function() {
        this.classList.toggle("active");
        var panel = this.nextElementSibling;
        if (panel.style.maxHeight) {
          panel.style.maxHeight = null;
        } else {
          panel.style.maxHeight = panel.scrollHeight + "px";
        }
      });
    }
    </script>


